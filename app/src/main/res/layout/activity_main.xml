<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:backgroundTint="#FCFAFAFA" android:background="#FFFFFF"
        android:id="@+id/bkg">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/android_2019"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:backgroundTint="#00FFFFFF"
            android:background="#EBFFFFFF"/>

    <Button
            android:id="@+id/btnHelloWorld"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/hello_world"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:backgroundTint="#83C486"/>
    <Button
            android:text="@string/time_figther"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/btnTimeFighter" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHelloWorld"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:backgroundTint="@color/time_attack"/>
    <Button
            android:text="@string/ftoc"
            android:layout_width="216dp"
            android:layout_height="49dp"
            android:id="@+id/btnFtoC" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTimeFighter" app:layout_constraintHorizontal_bias="0.491"
            android:backgroundTint="@color/FtoC"/>
    <Button
            android:text="@string/dialog_button"
            android:layout_width="217dp"
            android:layout_height="51dp"
            android:id="@+id/btnDialog" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFtoC" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:backgroundTint="@color/dialog_color"/>
    <Button
            android:text="@string/dialog_mgmt"
            android:layout_width="217dp"
            android:layout_height="51dp"
            android:id="@+id/btnDialogMngt" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDialog" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:background="@color/dialog_management"/>
    <Button
            android:text="@string/playground"
            android:layout_width="219dp"
            android:layout_height="41dp"
            android:id="@+id/btnPlaygorund" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDialogMngt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@color/playgound"/>
    <Button
            android:text="@string/tap"
            android:layout_width="219dp"
            android:layout_height="41dp"
            android:id="@+id/btnTap" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPlaygorund" android:background="@color/tap_me"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/btnIMC"
            android:layout_width="219dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:background="@color/IMC"
            android:text="@string/imc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTap" />

    <Button
            android:id="@+id/btnRPS"
            android:layout_width="219dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:background="@color/janken"
            android:text="@string/Janken"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnIMC" />

    <Button
            android:id="@+id/btnSP"
            android:layout_width="219dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/shared_pref"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRPS" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/author"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRPS"
            app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>