<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:backgroundTint="#FCFAFAFA" android:background="#FFFFFF"
        android:id="@+id/bkg">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/android_2019"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:backgroundTint="#00FFFFFF"
            android:background="#EBFFFFFF"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-thin"
            android:text="Luis Angel Ortega / @LinkSake"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/btnHelloWorld"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/hello_world"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:backgroundTint="#83C486"/>
    <Button
            android:text="@string/time_figther"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/btnTimeFighter" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHelloWorld"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:backgroundTint="@color/time_attack"/>
    <Button
            android:text="@string/ftoc"
            android:layout_width="216dp"
            android:layout_height="49dp"
            android:id="@+id/btnFtoC" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTimeFighter" app:layout_constraintHorizontal_bias="0.497"
            android:backgroundTint="@color/FtoC"/>
    <Button
            android:text="@string/dialog_button"
            android:layout_width="217dp"
            android:layout_height="51dp"
            android:id="@+id/btnDialog" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFtoC" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:backgroundTint="@color/dialog_color"/>

</android.support.constraint.ConstraintLayout>